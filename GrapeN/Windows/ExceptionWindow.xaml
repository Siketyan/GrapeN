<Window x:Class="GrapeN.Windows.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrapeN.Windows"
        mc:Ignorable="d"
        Title="GrapeN" Height="268.761" Width="476.648" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow">
    <DockPanel>
        <StackPanel Orientation="Horizontal" Margin="20,10" Width="auto" Height="49" DockPanel.Dock="Top">
            <Image HorizontalAlignment="Left" Height="100" Width="32" Source="../Resources/error.png"/>
            <TextBlock TextWrapping="Wrap" Width="400" Padding="10,8">
                エラーが発生しました。以下の情報とともに開発者（Twitter: @siketyan）まで報告してください。
            </TextBlock>
        </StackPanel>

        <TextBox x:Name="Message" Margin="15,0,15,15" IsReadOnlyCaretVisible="True" IsReadOnly="True"></TextBox>
    </DockPanel>
</Window>
